{
  "name": "@animxyz/core",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "main": "animxyz.scss",
  "sass": "animxyz.scss",
  "style": "dist/animxyz.min.css",
  "scripts": {
    "build": "run-s build:clean build:sass build:autoprefix build:cleancss",
    "build:autoprefix": "postcss --use autoprefixer --map false --output dist/animxyz.css dist/animxyz.css",
    "build:cleancss": "cleancss -o dist/animxyz.min.css dist/animxyz.css",
    "build:clean": "rimraf dist",
    "build:sass": "sass animxyz.scss dist/animxyz.css",
    "deploy": "npm run build",
    "start": "npm run build:sass -- --watch"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "clean-css-cli": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.5"
  }
}
